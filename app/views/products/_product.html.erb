<%= turbo_frame_tag product do %>
  <div class="product">
    <%= link_to product.product_upc, product_path(product), data: { turbo_frame: "_top" } %>
    <div class="product__actions">
      <%= button_to "Delete",
                    product_path(product),
                    method: :delete,
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_product_path(product),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>